@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
         var i=1;
        $("#add_row").click(function () {
            if (i <= 3) {
                $('#addr' + i).html("<td>" + (i + 1) + "</td><td><input name='prefix" + i + "' type='text' placeholder='Prefix' class='form-control input-md'  /> </td><td><input  name='name" + i + "' type='text' placeholder='Name'  class='form-control input-md'></td>");

                $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
                i++;
            }
  });
     $("#delete_row").click(function(){
    	 if(i>1){
		 $("#addr"+(i-1)).html('');
		 i--;
		 }
	 });
    });
    </script>
}