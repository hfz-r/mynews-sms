@model ChangePasswordModel
@{
    Layout = "_AccountLayout";

    ViewData["Title"] = "Change Password";
}

<style>
    .hide-border {
        border: none;
    }
</style>

<div class="login-box">
    <div class="login-logo">
        <img src="~/images/MainMenu_Logo.png" alt="Logo">
    </div>
    <div class="login-box-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
        <div class="result">
            @Model.Result
        </div>
        }
        <h3 class="login-box-msg">Change your password.</h3>
        <hr />
        <form asp-route="UserChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
                    </span>
                    <input asp-for="OldPassword" class="form-control" autocomplete="off" autofocus placeholder="Old Password" />
                    <span class="input-group-addon hide-border">
                        <_required />
                    </span>
                </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                    </span>
                    <input asp-for="NewPassword" class="form-control" autocomplete="off" placeholder="New Password" />
                    <span class="input-group-addon hide-border">
                        <_required />
                    </span>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                    </span>
                    <input asp-for="ConfirmNewPassword" class="form-control" autocomplete="off" placeholder="Confirm Password" />
                    <span class="input-group-addon hide-border">
                        <_required />
                    </span>
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Change password</button>
                </div>
            </div>
        </form>
    </div>
</div>