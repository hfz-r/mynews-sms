@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@{
    ViewData["Title"] = "Login";
}

<!-- Login form -->
<div class="col-lg-8 text-center" id="Login" style="background-color:LightGray;">
    <div class="form-group-sm">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <div class=".imgcontainer" align="center">
                <img src="~/images/MainMenu_Logo.png" alt="Logo">
            </div>
            <div class="login-box-body">
                @*<div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>*@
                <div class="form-group">
                    <label class="control-label col-sm-4">Email Address <span class="fa fa-envelope-o" aria-hidden="true"></span></label>
                    <div class="col-sm-6">
                        <input type="Email" class="form-control" placeholder="abc@gmail.com" />
                        @*<input asp-for="Email" class="form-control" placeholder="abc@gmail.com" />*@
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Password <span class="fa fa-key" aria-hidden="true"></span></label>
                    @*<label asp-for="Password" class="control-label col-sm-4"><span class="fa fa-key" aria-hidden="true"></span></label>*@
                    <div class="col-sm-6">
                        <input type="password" class="form-control" placeholder="Password" />
                        @*<input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-4">
                        <div class="checkbox">
                            <label><input type="checkbox"> Remember me</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-offset-4">
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary">
                                    <span class="fa fa-sign-in"> Login</span>
                                </button>
                            </div>
                            <div class="col-sm-2">
                                <button asp-action="Register" type="submit" class="btn btn-primary" id="Register">
                                    <span class="fa fa-user-o"> Register</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-7">
                        <div class="col-sm-7">
                            <a href="#" data-toggle="modal" data-target="#myModal">Forgotten Your Password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!--End login form -->
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" style="color:#000;" aria-label="Close"><span aria-hidden="true" style="color:#000">&times;</span></button>
                    <h4 class="modal-title" id="header" style="font-family:'Open Sans'; font-weight:500; color:#000">Please Enter Your Email</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group-sm">
                        <form id="forgetPasswordForm" method="post">
                            <div class="form-group">
                                <label class="control-label col-sm-4">Email Address <span class="fa fa-envelope-o" aria-hidden="true"></span></label>
                                <div class="col-sm-6">
                                    <input type="text" id="staffId" required="required" class="form-control required" placeholder="abc@gmail.com">
                                    <p id="sentemail" style="display:none; padding-top: 10px; padding-bottom: 10px; color:#000">Password will be sent to your email shortly.</p>
                                </div>
                            </div>
                            <div class="modal-footer btn-group" style="border:none;">
                                <button type="button" class="btn btn-pinterest btn-responsive" data-dismiss="modal" id="cancelBtn">Cancel</button>
                                <button type="submit" class="btn btn-default btn-responsive" id="submitBtn">Continue</button>
                                <button type="button" class="btn btn-success btn-responsive" data-dismiss="modal" onClick="refreshPage()" id="okBtn">Ok</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->

<script type="text/javascript">

    function refreshPage() {
        window.location.reload();
    }
</script>