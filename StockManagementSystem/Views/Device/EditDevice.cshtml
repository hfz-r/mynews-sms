@model DeviceModel

@{
    //page title
    ViewBag.Title = "Edit device details";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("device.manage");
}

<form asp-controller="Device" asp-action="EditDevice" method="post">
    <section class="content-header clearfix">
        <h1 class="pull-left">
            <a asp-action="Index"><i class="fa fa-arrow-circle-left"></i></a>
            @ViewBag.Title - @Model.SerialNo
        </h1>
        <div class="pull-right">
            <div class="ui-group-buttons">
                <button type="submit" name="save" class="btn bg-blue-gradient">
                    <i class="glyphicon glyphicon-save"></i> Save
                </button>
                <div class="or"></div>
                <button type="submit" name="save-continue" class="btn bg-yellow-gradient">
                    <i class="glyphicon glyphicon-saved"></i> Save and Continue Edit
                </button>
            </div>

            <a href="#" id="device-delete" class="btn bg-red-gradient" role="button" data-toggle="tooltip" data-placement="bottom" title="Delete">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </div>
    </section>
    @await Html.PartialAsync("_CreateOrUpdateDevice", Model)
</form>
<_delete-confirmation asp-model-id="@Model.Id" asp-action="DeleteDevice" asp-button-id="device-delete" />
