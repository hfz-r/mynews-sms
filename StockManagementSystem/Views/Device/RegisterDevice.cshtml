@using StockManagementSystem.Web.UI

@{
    //page title
    ViewBag.Title = "Register Device";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("device.manage");
}

<section class="content-header">
    <h1 class="fa fa-mobile">&nbsp;Manage Device</h1>
    <ol class="breadcrumb">
        <li class="#">
            <a href="@Url.Action("Index", "Device")">
                <i class="fa fa-mobile"></i>
            </a>
        </li>
        <li class="breadcrumb-item active">
            <a href="@Url.Action("Index", "Device")">Device Management</a>
        </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Panels -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Register Device</h3>
        </div>
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="InputSerialNo">Serial Number</label>
                    <input type="text" class="form-control" id="InputSerialNo" placeholder="Enter serial number">
                </div>
                <div class="form-group">
                    <label for="InputModelNo">Model Number</label>
                    <input type="text" class="form-control" id="InputModelNo" placeholder="Enter Model Number">
                </div>
                <div class="form-group">
                    <label for="InputBranch">Branch</label>
                    <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                        <option selected="selected">Mid Valley</option>
                        <option>One Utama</option>
                        <option>Pavillion</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="InputBranch">Status</label>
                    <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                        <option selected="selected">Active</option>
                        <option>Inactive</option>
                    </select>
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="button" id="btn-cancel" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Submit</button>
            </div>
        </form>
    </div>
</section>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {

            $('#btn-cancel').click(function(e) {
                location.href = '@Url.Content("~/Device/")';
            });

        });
    </script>
}