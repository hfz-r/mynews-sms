@model DeviceModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="form-group">
                <div class="col-xs-3">
                    <label asp-for="SerialNo" class="control-label pull-right"></label>
                </div>
                <div class="col-xs-9">
                    <input asp-for="SerialNo" class="form-control" />
                    <span asp-validation-for="SerialNo"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-3">
                    <label asp-for="ModelNo" class="control-label pull-right"></label>
                </div>
                <div class="col-xs-9">
                    <input asp-for="ModelNo" class="form-control" />
                    <span asp-validation-for="ModelNo"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-3">
                    <label asp-for="SelectedStoreId" class="control-label pull-right"></label>
                </div>
                <div class="col-xs-9">
                    <div class="input-group input-group-required">
                        <select asp-for="SelectedStoreId" asp-items="Model.AvailableStores" asp-multiple="true"></select>
                        <div class="input-group-btn">
                            <required />
                        </div>
                    </div>
                    <script>
                        $(document).ready(function() {
                            var storesIdsInput = $('#@Html.IdFor(model => model.SelectedStoreId)')
                                .kendoMultiSelect({
                                    autoClose: false,
                                    filter: "contains",
                                    maxSelectedItems: 1
                                }).data("kendoMultiSelect");

                            @if (Model.AvailableStores.Count == 0)
                            {
                                <text>
                                    storesIdsInput.placeholder = "No stores available";
                                    storesIdsInput.enable = false;
                                </text>
                            }
                        });
                    </script>
                </div>
            </div>

            @if (Model.Id > 0)
            {
                <div class="form-group">
                    <div class="col-xs-3">
                        <label asp-for="CreatedOn" class="control-label pull-right"></label>
                    </div>
                    <div class="col-xs-9">
                        <div class="form-text-row">@Model.CreatedOn</div>
                    </div>
                </div>
            }
            @if (Model.Id > 0)
            {
                <div class="form-group">
                    <div class="col-xs-3">
                        <label asp-for="LastActivityDate" class="control-label pull-right"></label>
                    </div>
                    <div class="col-xs-9">
                        <div class="form-text-row">@Model.LastActivityDate</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>