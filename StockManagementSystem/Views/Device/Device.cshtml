@using StockManagementSystem.Web.UI
@model StockManagementSystem.Models.Devices.DeviceViewModel

@{
    //page title
    ViewBag.Title = "Device";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("device.manage");
}

<section class="content-header">
    <h1 class="fa fa-mobile">&nbsp;Manage Device</h1>
    <ol class="breadcrumb">
        <li class="#">
            <a href="@Url.Action("Index", "Device")">
                <i class="fa fa-mobile"></i>
            </a>
        </li>
        <li class="breadcrumb-item active">
            <a href="@Url.Action("Index", "Device")">Device Management</a>
        </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Panels -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">List of devices</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <button type="button" id="btn-register" class="btn btn-warning pull-right margin-bottom"> Register</button>

            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap box-tools">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Serial No.</th>
                                    <th>Model No</th>
                                    <th>Branch</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var device in Model.Device)
                                {
                                    <tr role="row" class="odd">
                                        <td>@device.SerialNo</td>
                                        <td>@device.ModelNo</td>
                                        <td>@device.StoreId</td>
                                        <td>@device.Status</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="submit" class="btn btn-info pull-left fa fa-edit" title="Edit"></button>
                                            </div>
                                            <div class="btn-group">
                                                <button type="submit" class="btn btn-info pull-left fa fa-remove" title="Delete"></button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <!-- DataTables -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $('#btn-register').click(function (e)
        {
            location.href = '@Url.Content("~/Device/RegisterDevice/")';
        });

        $('#example1').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        })
    });
    </script>
}