@model LogModel

@{
    ViewBag.Title = "Log entry details";
    Html.SetActiveMenuItemSystemName("admin.system.log");
}

<form asp-controller="Log" asp-action="View" method="post">
    <section class="content-header clearfix">
        <h1 class="pull-left">
            <a asp-action="List">
                <i class="fa fa-arrow-circle-left"></i>
            </a>
            @ViewBag.Title
        </h1>
        <div class="pull-right">
            <a href="#" id="log-delete" class="btn bg-red-gradient" role="button" data-toggle="tooltip" data-placement="bottom" title="Delete">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </div>
    </section>
    <section class="content">
        <div class="form-horizontal">
            <div asp-validation-summary="All"></div>
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="LogLevel"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Model.LogLevel</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="ShortMessage"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Html.Raw(Model.ShortMessage)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="FullMessage"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Html.Raw(Model.FullMessage)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="IpAddress"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Model.IpAddress</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="UserId"/>
                            </div>
                            <div class="col-md-9">
                                @if (Model.UserId.HasValue)
                                {
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId">@(!string.IsNullOrEmpty(Model.UserEmail) ? Model.UserEmail : "Guest")</a>
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="PageUrl"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Model.PageUrl</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="ReferrerUrl"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Model.ReferrerUrl</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <_label asp-for="CreatedOn"/>
                            </div>
                            <div class="col-md-9">
                                <div class="form-text-row">@Model.CreatedOn</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<_delete-confirmation asp-model-id="@Model.Id" asp-button-id="log-delete"/>