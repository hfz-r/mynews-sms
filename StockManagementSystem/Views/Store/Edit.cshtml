@model StoreModel

@{
    ViewBag.Title = "Outlet Management";

    Html.SetActiveMenuItemSystemName("store");
}

<form asp-controller="Store" asp-action="Edit" method="post" id="store-form">
    <section class="content-header clearfix">
        <h1 class="pull-left">
            <a asp-action="Index"><i class="fa fa-arrow-circle-left"></i></a>
            @ViewBag.Title - @Model.Name
        </h1>
        <div class="pull-right">
            <div class="ui-group-buttons">
                <button type="submit" name="save" class="btn bg-blue-gradient">
                    <i class="glyphicon glyphicon-save"></i> Save
                </button>
                <div class="or"></div>
                <button type="submit" name="save-continue" class="btn bg-yellow-gradient">
                    <i class="glyphicon glyphicon-saved"></i> Save and Continue Edit
                </button>
            </div>

            <a href="#" id="store-delete" class="btn bg-red-gradient" role="button" data-toggle="tooltip" data-placement="bottom" title="Delete">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </div>
    </section>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<_delete-confirmation asp-model-id="@Model.BranchNo" asp-action="Delete" asp-button-id="store-delete"/>