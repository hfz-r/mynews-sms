@model StockManagementSystem.Models.PushNotification.NotificationViewModel
@using StockManagementSystem.Web.UI


@{
    //page title
    ViewBag.Title = "Notification";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Push Notification");
}

<section class="content-header">
    <h1 class="fa fa-exclamation-triangle">&nbsp;Push Notification</h1>
    <ol class="breadcrumb pull-right">
        <li class="#">
            <a href="@Url.Action("Index", "Home")">
                <i class="glyphicon glyphicon-home"></i>
            </a>
        </li>
        <li class="#">
            <a href="#">
                <i class="fa fa-exclamation-triangle"></i>
            </a>
        </li>
        <li class="breadcrumb-item active">
            <a href="@Url.Action("Notification", "PushNotification")">@ViewBag.Title</a>
        </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Panels -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">List of notifications</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <button type="button" id="btn-addNotification" class="btn btn-default pull-right"><span class="glyphicon glyphicon-plus"></span> Add New Notification</button>
            <div id="notification_wrapper" class="dataTables_wrapper form-inline dt-bootstrap box-tools">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="notification" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr role="row">
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Repeat</th>
                                    <th>Category</th>
                                    <th>Branch(s)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pushNotificationStore in Model.PushNotificationStore)
                                {
                                    <tr role="row">
                                        <td>@pushNotificationStore.PushNotifications.Title</td>
                                        <td>@pushNotificationStore.PushNotifications.Desc</td>
                                        <td>@pushNotificationStore.PushNotifications.IsShift</td>
                                        <td>@pushNotificationStore.PushNotifications.NotificationCategories.Name</td>
                                        <td>@pushNotificationStore.Store.P_Name</td>
                                        <td>
                                            <div class="btn-group">
                                                @Html.AntiForgeryToken()
                                                <a href="@Url.Action("EditNotification", "PushNotification", new { Id = @pushNotificationStore.Id })" class="btn btn-info pull-left" role="button">Edit</a>
                                            </div>
                                            <div class="btn-group">
                                                <button type="submit" data-toggle="modal" data-target="#confirmation" class="btn btn-info pull-left" title="Delete"> Delete</button>
                                            </div>

                                            <!-- Modal -->
                                            <div class="modal fade" id="confirmation" tabindex="-1" role="dialog" aria-labelledby="confirmationLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title" id="confirmationLabel">Confirmation</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            Confirm to delete notification?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary pull-left" data-dismiss="modal">Close</button>
                                                            @using (Html.BeginForm("DeleteNotification", "PushNotification", FormMethod.Post))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-primary pull-right" title="Delete" asp-action="DeleteNotification" asp-route-id="@pushNotificationStore.Id">Confirm</button>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- DataTables -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#btn-addNotification').click(function(e) {
                location.href = '@Url.Content("~/PushNotification/AddNotification/")';
            });

            $('#notification').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
            })
        });
    </script>
}