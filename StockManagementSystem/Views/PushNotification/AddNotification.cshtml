
@{
    ViewData["Title"] = "Add Notification";
}

@section navigations{
    @await Html.PartialAsync("_NavPartial")
}

<div class="content-wrapper">
    <section class="content-header">
        <h1 class="fa fa-exclamation-triangle">&nbsp;Push Notification</h1>
        <ol class="breadcrumb">
            <li class="#"><a href="#"><i class="fa fa-exclamation-triangle"></i></a></li>
            <li class="breadcrumb-item active"><a href="@Url.Action("AddNotification", "PushNotification")">Push Notification</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Panels -->
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Add notification</h3>
            </div>
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="InputTitle">Title</label>
                        <input type="text" class="form-control" id="InputTitle" placeholder="Enter notification title">
                    </div>
                    <div class="form-group">
                        <label for="InputDesc">Description</label>
                        <input type="text" class="form-control" id="InputDesc" placeholder="Enter notification description">
                    </div>
                    <div class="form-group">
                        <label for="InputCategory">Category</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Others</option>
                            <option>Stock Take</option>
                            <option>Others</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="InputCategory">Repeat</label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio" checked>Shift/Daily
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio">Weekly
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio">Monthly
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="InputBranch">Branch</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Mid Valley</option>
                            <option>One Utama</option>
                            <option>Pavillion</option>
                        </select>
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="button" id="btn-cancel" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
            </form>
        </div>
    </section>
</div>

@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {

        $('#btn-cancel').click(function (e)
      {
          location.href = '@Url.Content("~/PushNotification/Notification/")';
      });

    });
    </script>
}

