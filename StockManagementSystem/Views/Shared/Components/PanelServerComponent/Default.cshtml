@using StockManagementSystem.Services.Common
@model StockManagementSystem.Models.System.ServerViewModel
@inject IStartupTime app

<div class="dashboard-content panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Server Info<span id="btn-refresh-server" class="pull-right"><i class="glyphicon glyphicon-refresh"></i></span></h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <label class="col-sm-4">Machine</label>
            <div class="col-sm-8">
                <span class="text-break">
                    @Environment.MachineName
                </span>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4">OS</label>
            <div class="col-sm-8">
                <span class="text-break">
                    @Environment.OSVersion.ToString()
                </span>
            </div>
        </div>
        @{var uptime = @app.Uptime;}
        <div class="row">
            <label class="col-sm-4">Uptime</label>
            <div class="col-sm-8">
                <span class="text-break">
                    @uptime.ToString("dd") day @uptime.ToString("hh") hour @uptime.ToString("mm") minute @uptime.ToString("ss") second
                </span>
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.AppVersion, new { @class = "col-sm-4" })
            <div class="col-sm-8">
                <span class="text-break">
                    @Html.DisplayTextFor(m => m.AppVersion)
                </span>
            </div>
        </div>
    </div>
</div>
