@inject IWorkContext WorkContext
@inject SignInManager<User> SignInManager
@inject StockManagementSystem.Services.Common.IGenericAttributeService GenericAttributeService
@using StockManagementSystem.Core.Domain.Identity
@using StockManagementSystem.Web.UI

@{
    var kendoVersion = "2014.1.318";

    //CSS resources
    await Html.AppendCssFileParts("~/css/admin.common.css");
    await Html.AppendCssFileParts("~/css/style.css");
    await Html.AppendCssFileParts("~/lib/bootstrap/dist/css/bootstrap.min.css");
    await Html.AppendCssFileParts($"~/lib/kendo/{kendoVersion}/kendo.rtl.min.css");
    await Html.AppendCssFileParts($"~/lib/kendo/{kendoVersion}/kendo.default.min.css");
    await Html.AppendCssFileParts($"~/lib/kendo/{kendoVersion}/kendo.common.min.css");
    await Html.AppendCssFileParts("~/lib/jquery-ui/jquery-ui-1.10.3/jquery-ui-themes/smoothness/jquery-ui-1.10.3.custom.min.css");
    await Html.AppendCssFileParts("~/lib/font-awesome/css/font-awesome.min.css");
    await Html.AppendCssFileParts("~/lib/Ionicons/css/ionicons.min.css");

    //scripts
    await Html.AppendScriptParts($"~/lib/kendo/{kendoVersion}/kendo.web.min.js");
    await Html.AppendScriptParts("~/js/admin.common.js");
    await Html.AppendScriptParts("~/lib/fastclick/lib/fastclick.js");
    await Html.AppendScriptParts("~/lib/jquery-slimscroll/jquery.slimscroll.min.js");
    await Html.AppendScriptParts("~/lib/jquery-migrate/jquery-migrate-1.2.1.min.js");
    await Html.AppendScriptParts("~/lib/jquery-ui/jquery-ui-1.10.3/jquery-ui-1.10.3.custom.min.js");
    await Html.AppendScriptParts("~/lib/jquery-validate/jquery.validate.unobtrusive/jquery.validate.unobtrusive.min.js");
    await Html.AppendScriptParts("~/lib/jquery-validate/jquery.validate-v1.11.1/jquery.validate.min.js");
    await Html.AppendScriptParts("~/js/adminlte.min.js");
    await Html.AppendScriptParts("~/lib/bootstrap/dist/js/bootstrap.min.js");
    await Html.AppendScriptParts("~/lib/jquery/jquery-1.10.2/jquery-1.10.2.min.js");

    //sidebar
    const string hideSidebarAttributeName = "HideSidebar";
    var hideSidebar = await GenericAttributeService.GetAttributeAsync<bool>(WorkContext.CurrentUser, hideSidebarAttributeName);

    var currentCustomer = WorkContext.CurrentUser;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Stock Management System</title>

    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i" rel="stylesheet">
    <script>
        var rootAppPath = '@(Url.Content("~/"))';
    </script>
    @await Html.DefaultCssFiles(this.Url, ResourceLocation.Head, false)
    @await Html.DefaultScripts(this.Url, ResourceLocation.Head, false)
</head>

<body class="hold-transition skin-blue sidebar-mini @if (hideSidebar) {<text>sidebar-collapse</text>}">

    <div class="throbber">
        <div class="curtain"></div>
        <div class="curtain-content">
            <div>
                <h1 class="throbber-header">Wait...</h1>
                <p>
                    <img src="@Url.Content("~/images/throbber-synchronizing.gif")" alt="" />
                </p>
            </div>
        </div>
    </div>
    <div id="ajaxBusy">
        <span>&nbsp;</span>
    </div>

    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Content("~/")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">
                    <img src="~/images/logo.png" alt="home" height="35" width="38" />
                </span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                    <img src="~/images/MainMenu_Logo.png" alt="home" height="40" width="105" />
                </span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                @await Html.PartialAsync("_LoginPartial")
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">You have 10 notifications</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-users text-aqua"></i> 5 new members joined today
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="footer"><a href="#">View all</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="sidebar-form">
                    <div id="search-box">
                        <input type="text" class="form-control admin-search-box typeahead" placeholder="Search">
                    </div>
                </div>
                <script>
                    // TODO search script
                </script>
                @await Html.PartialAsync("Menu")
            </section>
        </aside>
        <div class="content-wrapper">
            @await Html.PartialAsync("Notifications")
            <div>
                @RenderBody()
            </div>
        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0 @*TO DO: Change to assembly version*@
            </div>
            <strong>Copyright &copy; 2018 <a href="https://www.b-excelle.com">B Excelle</a>.</strong> All rights reserved.
        </footer>
    </div>

    @await Html.DefaultCssFiles(this.Url, ResourceLocation.Footer, true)
    @await Html.DefaultScripts(this.Url, ResourceLocation.Footer, true)
    <a id="backTop" class="btn btn-back-top bg-teal"></a>
    <script>
    $(document).ready(function() {
        //enable "back top" arrow
        $('#backTop').backTop();

        //enable tooltips
        $('[data-toggle="tooltip"]').tooltip();

        //save sidebar preferences
        $('a.sidebar-toggle').on('click', function () {
            var collapsed = !$('body').hasClass('sidebar-collapse');
            saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hideSidebarAttributeName', collapsed);
        });

        //bug-fix for unexpected auto-closing of grid's page size DropDownList in Chrome (Kendo grid bug)
        var ddl = $(".k-grid-pager [data-role='dropdownlist']").data("kendoDropDownList");
        if (ddl) {
            ddl.bind("close", pager_close);

            function pager_close(e) {
                e.sender.refresh();
            }
        }
    });
    </script>

    @RenderSection("scripts", required: false)

</body>

</html>